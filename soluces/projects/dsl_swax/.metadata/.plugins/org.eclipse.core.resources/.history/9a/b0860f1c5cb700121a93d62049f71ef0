package simulation.dsl
import simulation.api.Population

object SimulationDslTest extends App {

	val population = new Population(MaximumSize = 5000,
	    EmploymentRate = 0.8,
	    CrazynessRate = 0.01,
	    HighRankRate = 0.05,
	    MediumRankRate = 0.75,
	    LowRankRate = 0.25)
	
	25 percent of population is_subscribed to network
	
	val simulator = simulation_of population during 5.years
	
	stats_of simulator to_be_displayed {
	  rank
	  alive
	  employed
	  crazy
	  subscribed
	  mean_friend_number
	}
  
}